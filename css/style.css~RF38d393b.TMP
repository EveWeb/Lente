html, body {
	color: #fff;
	font-family: 'Open Sans', sans-serif;
}

h1 {font-size: 15em; font-weight: 300;}

h2 {font-size: 5em;}
.h2-gray {color: #444;}
.h2-gray-b {font-family: 'Oswald'; color: #444;}

h3 {font-size: 4em;}
.h3-gray {color: #444;}
.h3-gray-b {font-family: 'Oswald'; color: #444;}

h4 {font-size: 3em;}
.h4-gray {color: #444;}
.h4-gray-b {color: #444; font-family: 'Oswald';}

h5 {font-size: 2em;}
.h5-gray {color: #444;}
.h5-gray-b {color: #444; font-family: 'Oswald';}

p, {font-size: 1.5em; line-height: 2em;}
.p-gray {color: #444; font-size: 1.5em; line-height: 2em;}

a:hover {color: #fff; text-decoration: none;}
a {color: #444;}

.carousel {position: relative;}

/*BACKGROUND*/
#home {background: transparent url('../img/pattern.jpg') repeat scroll 0 0; position: relative;}
#services {background: url('../img/service-bg.jpg'); width: 100%; height: 100%;}
#about {background: url('../img/service-bg.jpg'); width: 100%; height: 100%;}
#contact {background: url('../img/service-bg.jpg'); width: 100%; height: 100%;}

/*NAVBAR*/
.navbar {min-height: 65px;}
.navbar-default {border-radius: 0; color: #444; position: fixed; width: 100%; z-index: 2;}
.navbar-right {float: right; padding: 0.5em; font-family: 'Oswald', sans-serif;' font-weight: 700; font-size: 1.3em;}
.nav > li > a {padding: 14px 15px; }
.nav-pills > li > a {color: #444;}
.nav-pills > li > a:hover {font-weight: 400; background: #1EA062; color: #fff; border-radius: 0;}

/*BUTTONS*/
.btn-lg {background: -webkit-gradient(linear, left top, left bottom, from(#F56363), to(#C23030)); background: -moz-linear-gradient(linear, left top, left bottom, from(#F56363), to(#C23030));}
.btn-sm {background: -webkit-gradient(linear, left top, left bottom, from(#F56363), to(#C23030)); background: -moz-linear-gradient(linear, left top, left bottom, from(#F56363), to(#C23030));}

/*HOME*/
.arrow {background: none; border: 1px solid #fff; width: 50px; height: 50px; border-radius: 50%; text-align: center;}

/*SERVICES*/
.list {background: #1EA062; border-radius: 50%; text-align: center;}

/*CONTACT FORM*/
.form-control {position: relative; margin-bottom: 1em;}
.cons {border-radius: 50%; width: 100%; height: 100%; padding: 0.3em; color: #fff; background: #C23030; margin-right: 1em;}